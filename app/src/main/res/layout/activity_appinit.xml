<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C7CF"
    android:backgroundTint="#C4C7CF"
    tools:context=".AppInit">

    <View
        android:id="@+id/mainView"
        android:layout_width="349dp"
        android:layout_height="599dp"
        android:layout_marginTop="52dp"
        android:background="#DBE4E2"
        android:clickable="false"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Dashboard"
        android:layout_width="204dp"
        android:layout_height="53dp"
        android:layout_marginTop="460dp"
        android:backgroundTint="#B52032"
        android:gravity="center"
        android:insetTop="4dp"
        android:insetBottom="4dp"
        android:text="View Dashboard"
        android:textColor="#CFD8DC"
        android:textSize="14sp"
        app:iconPadding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btn_startOrder"
        android:layout_width="204dp"
        android:layout_height="53dp"
        android:layout_marginTop="336dp"
        android:backgroundTint="#B52032"
        android:gravity="center"
        android:insetTop="4dp"
        android:insetBottom="4dp"
        android:text="Start Order"
        android:textColor="#CFD8DC"
        android:textSize="14sp"
        app:iconPadding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/brand"
        android:layout_width="216dp"
        android:layout_height="59dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/great_vibes"
        android:gravity="center"
        android:shadowColor="#A9000000"
        android:text="Crumby's Pizza"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Crumby's Pizza" />

    <TextView
        android:id="@+id/sarc_slogan"
        android:layout_width="274dp"
        android:layout_height="30dp"
        android:layout_marginTop="240dp"
        android:background="#C4C7CF"
        android:fontFamily="@font/bitter"
        android:gravity="center"
        android:text="@string/open_til_you_re_hungry"
        android:textColor="#000000"
        android:textSize="20sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/delivery_msg"
        android:layout_width="349dp"
        android:layout_height="39dp"
        android:layout_marginTop="612dp"
        android:background="#A66C48"
        android:clickable="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/delivery_is_not_free"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/familyMsg"
        android:layout_width="214dp"
        android:layout_height="45dp"
        android:layout_marginTop="142dp"
        android:fontFamily="@font/great_vibes"
        android:gravity="center"
        android:text="@string/family_owned_amp_operated"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_langSwap"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#B52032"
        android:gravity="center"
        android:insetTop="4dp"
        android:insetBottom="4dp"
        android:text="@string/en_fr"
        android:textColor="#CFD8DC"
        android:textSize="12sp"
        app:iconPadding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>